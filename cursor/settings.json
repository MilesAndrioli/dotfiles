{
    // Typography
    "editor.fontFamily": "'Fira Code', 'JetBrains Mono'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,
    "terminal.integrated.fontSize": 13,

    // Brackets
    "editor.matchBrackets": "never",
    // "editor.bracketPairColorization.enabled": false,
    // "editor.guides.bracketPairs": "active",

    // Icons
    "workbench.iconTheme": "symbols",

    // Theme
    "workbench.colorTheme": "Monochrome Dark Subtle",
    "workbench.colorCustomizations": {
        "[Monochrome Dark]": {
            "tab.activeBackground": "#191919",
            "tab.border": "#191919"
        },
        "[Monochrome Dark Subtle]": {
            "tab.activeBackground": "#131b22",
            "tab.border": "#131b22"
        },
        "[Monochrome Dark Cool Gray]": {
            "tab.activeBackground": "#1a212f",
            "tab.border": "#1a212f"
        },
        "[Monochrome Light]": {
            "tab.activeBackground": "#e2e2e2",
            "tab.border": "#e2e2e2"
        }
    },

    // Ruler
    "editor.rulers": [
        {
            "column": 80,
            "color": "#131b22"
        }
    ],

    // Indent
    "indentRainbow.colors": [
        "rgba(180, 180, 180, 0.02)",
        "rgba(180, 180, 180, 0.04)",
        "rgba(180, 180, 180, 0.06)",
        "rgba(180, 180, 180, 0.08)",
        "rgba(180, 180, 180, 0.10)",
        "rgba(180, 180, 180, 0.12)",
        "rgba(180, 180, 180, 0.14)",
        "rgba(180, 180, 180, 0.16)"
    ],

    // Cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",

    // Formatting
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "[astro]": {
        "editor.defaultFormatter": "astro-build.astro-vscode"
    },

    // Scroll
    "editor.smoothScrolling": true,
    "editor.scrollBeyondLastLine": false,
    "editor.mouseWheelScrollSensitivity": 1.3,

    // Terminal
    "terminal.external.windowsExec": "C:\\Users\\miles\\AppData\\Local\\Programs\\Warp/warp.exe",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // "terminal.external.osxExec": "Warp",
    "terminal.integrated.defaultProfile.osx": "zsh",

    // Sorting
    "explorer.confirmDelete": false,
    "editor.linkedEditing": true,
    "window.menuBarVisibility": "toggle",
    "workbench.layoutControl.enabled": false,
    "editor.wordWrap": "wordWrapColumn",
    "window.title": "${rootNameShort} ${separator} ${activeFolderMedium} ${separator} ${activeRepositoryBranchName}",
    "git.confirmSync": false,
    "git.autofetch": true,

    // Experimental
    // "editor.lineNumbers": "relative",
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "cursor.composer.shouldAllowCustomModes": true,
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    "cursor.chat.terminalShowHoverHint": false,
    "cursor.composer.shouldAutoAcceptDiffs": false,
    "update.releaseTrack": "prerelease",
    "cursor.composer.collapsePaneInputBoxPills": true,
    "breadcrumbs.enabled": false,
    "workbench.statusBar.visible": false
}
