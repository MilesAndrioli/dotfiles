{
    // Typography
    "editor.fontFamily": "'JetBrains Mono', 'Fira Code'",
    "editor.fontLigatures": true,
    "editor.fontSize": 16,

    // Brackets
    "editor.matchBrackets": "never",
    "editor.guides.bracketPairs": "active",
    // "editor.bracketPairColorization.enabled": false,

    // Icons
    "workbench.iconTheme": "symbols",

    // Breadcrumbs
    "breadcrumbs.icons": false,
    "breadcrumbs.symbolPath": "off",
    "workbench.colorCustomizations": {
        "[Monochrome Dark]": {
            "tab.activeBackground": "#191919",
            "tab.border": "#191919"
        },
        "[Monochrome Dark Subtle]": {
            "tab.activeBackground": "#131b22",
            "tab.border": "#131b22"
        },
        "[Monochrome Dark Cool Gray]": {
            "tab.activeBackground": "#1a212f",
            "tab.border": "#1a212f"
        }
    },

    // Ruler
    "editor.rulers": [
        {
            "column": 80,
            "color": "#1a212f"
        }
    ],

    // Theme Token Customizations
    "editor.tokenColorCustomizations": {
        "[Monochrome Dark *]": {
            "textMateRules": [
                {
                    "scope": [
                        "entity.name.function",
                        "support.function",
                        "entity.name.tag"
                    ],
                    "settings": {
                        "foreground": "#89dceb" // Sky
                    }
                },
                {
                    "scope": [
                        "string",
                        "punctuation.definition.string",
                        "constant.numeric",
                        "constant.language"
                    ],
                    "settings": {
                        "foreground": "#b4befe" // Lavender
                    }
                },
                {
                    "scope": [
                        "variable",
                        "meta.definition.variable entity.name.variable"
                    ],
                    "settings": {
                        "foreground": "#7f849c" // Overlay 1
                    }
                }
            ]
        }
    },

    // Indent
    // "indentRainbow.colors": [
    //     "rgba(180, 180, 180, 0.02)",
    //     "rgba(180, 180, 180, 0.04)",
    //     "rgba(180, 180, 180, 0.06)",
    //     "rgba(180, 180, 180, 0.08)",
    //     "rgba(180, 180, 180, 0.10)",
    //     "rgba(180, 180, 180, 0.12)",
    //     "rgba(180, 180, 180, 0.14)",
    //     "rgba(180, 180, 180, 0.16)"
    // ],
    "indentRainbow.colors": [
        "rgba(116, 199, 236, 0.02)",
        "rgba(116, 199, 236, 0.04)",
        "rgba(116, 199, 236, 0.06)",
        "rgba(116, 199, 236, 0.08)",
        "rgba(116, 199, 236, 0.10)",
        "rgba(116, 199, 236, 0.12)",
        "rgba(116, 199, 236, 0.14)",
        "rgba(116, 199, 236, 0.16)"
    ],

    // Cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.multiCursorModifier": "ctrlCmd",

    // Formatting
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "prettier.tabWidth": 4,
    "[astro]": {
        "editor.defaultFormatter": "astro-build.astro-vscode"
    },

    // Scroll
    "editor.smoothScrolling": true,
    "editor.scrollBeyondLastLine": false,
    "editor.mouseWheelScrollSensitivity": 1.3,

    // Terminal
    "terminal.external.windowsExec": "C:\\Users\\miles\\AppData\\Local\\Programs\\Warp/warp.exe",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    // "terminal.external.osxExec": "Warp",
    // "terminal.integrated.defaultProfile.osx": "Git Bash",

    // Sorting
    "explorer.confirmDelete": false,
    "editor.linkedEditing": true,
    "workbench.layoutControl.enabled": false,
    "editor.wordWrap": "wordWrapColumn",
    "window.title": "${rootNameShort}",
    "git.confirmSync": false,
    "git.autofetch": true,
    "git.decorations.enabled": false,
    "editor.renderLineHighlight": "all",

    // Experimental
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "cursor.composer.shouldAllowCustomModes": true,
    "update.releaseTrack": "prerelease",
    "workbench.colorTheme": "Monochrome Dark Subtle",
    "cursor.diffs.useCharacterLevelDiffs": true,
    "cursor.terminal.usePreviewBox": true,
    "font-preview.defaultTab": "Waterfall",
    "breadcrumbs.enabled": false,
    "window.menuBarVisibility": "compact",
    "workbench.statusBar.visible": false
}
